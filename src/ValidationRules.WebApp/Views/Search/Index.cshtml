@{
    ViewData["Title"] = "Поиск пользователя";
}

<h2>@ViewData["Title"].</h2>

<form class="form-horizontal" role="form" method="post">
    <div class="form-group">
        <label class="col-sm-3 control-label" for="account">Пользователь</label>
        <div class="col-sm-9">
            <select class="form-control" name="account" id="account"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label" for="project">Город</label>
        <div class="col-sm-9">
            <select class="form-control" name="project" id="project"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-default">Перейти</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/search.js"></script>
}